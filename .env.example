# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4
LOG_LEVEL=INFO

# Security
SECRET_PROVIDER=vault  # vault, aws, azure, gcp
SECRET_ENDPOINT=http://localhost:8200
VAULT_ROLE=policy-reader
VAULT_TOKEN=  # For development only, use Kubernetes auth in production

# Authentication
AUTH_ENABLED=true
JWT_SECRET_PATH=app/jwt-secret
JWT_ALGORITHM=RS256
JWT_ISSUER=mcp-policy-reader

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_TLS_ENABLED=true
METRICS_CERT_PATH=certs/metrics/exporter.crt
METRICS_KEY_PATH=certs/metrics/exporter.key

# Document Sources
# SMB
SMB_ENABLED=true
SMB_CREDENTIALS_PATH=smb/credentials

# Git
GIT_ENABLED=true
GIT_CREDENTIALS_PATH=git/credentials

# SharePoint
SHAREPOINT_ENABLED=true
SHAREPOINT_CREDENTIALS_PATH=sharepoint/credentials

# S3
S3_ENABLED=true
S3_CREDENTIALS_PATH=aws/s3-reader

# Azure Blob
AZURE_BLOB_ENABLED=true
AZURE_CREDENTIALS_PATH=azure/blob-reader

# Document Processing
MAX_DOCUMENT_SIZE_MB=100
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=365
AUDIT_LOG_ENABLED=true
PII_REDACTION_ENABLED=true
